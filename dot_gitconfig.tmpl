  email = "4390451+MarkArranz@users.noreply.github.com"
[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
[init]
    defaultBranch = main

# Configure neovim as the difftool and mergetool: 
[diff]
    tool = "nvimdiff1"
[merge]
    tool = "nvimdiff2"

{{ if .forWork -}}

[includeIf "gitdir:~/Code/work/"]
    path = ~/.gitconfig_work

{{- else -}}

[includeIf "gitdir:~/Code/public/"]
    path = ~/.gitconfig_public

[includeIf "gitdir:~/Code/learning/"]
    path = ~/.gitconfig_learning

[includeIf "gitdir:~/Code/private/"]
    path = ~/.gitconfig_private

{{- end }}
