[core]
    editor = nvim
    excludesFile = ~/.gitignore_global
    pager = delta

[init]
    defaultBranch = main

# Configure git-delta
[interactive]
    diffFilter = delta --color-only

[include]
    path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
    features = catppuccin-mocha
    dark = true
    navigate = true

[merge]
    conflictStyle = zdiff3

[worktree]
    guessRemote = true
    useRelativePaths = true

[alias]
    bare-clone = "!~/.config/git/scripts/git-bare-clone.sh"
    clean-worktrees = "!~/.config/git/scripts/git-clean-worktrees.sh"
    track = "!git branch --set-upstream-to=origin/$(git branch --show-current)"

{{ if .forWork -}}

[includeIf "gitdir:~/Code/work/"]
    path = ~/.gitconfig_work

{{- else -}}

[includeIf "gitdir:~/Code/public/"]
    path = ~/.gitconfig_public

[includeIf "gitdir:~/Code/learning/"]
    path = ~/.gitconfig_learning

[includeIf "gitdir:~/Code/private/"]
    path = ~/.gitconfig_private

{{- end }}


