#!/usr/bin/env bash

# ROSEWATER='0xfff5e0dc'
PINK='0xfff5c2e7'
SKY='0xff89dceb'
OVERLAY0='0xff6c7086'

OPTIONS=(
  style='round'
  # active_color="glow($ROSEWATER)"
  active_color="gradient(top_left=$PINK,bottom_right=$SKY)"
  inactive_color="$OVERLAY0"
  width='6.0'
  hidpi='on'
)

borders "${OPTIONS[@]}"
