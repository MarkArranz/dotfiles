[core]
    editor = nvim
[init]
    defaultBranch = main

# Configure Vim Diff as Merge Tool
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = zdiff3
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED \
          -c '$wincmd w' -c 'wincmd J'

[includeIf "gitdir:~/Code/public"]
    path = ~/.gitconfig-public

[includeIf "gitdir:~/Code/learning"]
    path = ~/.gitconfig-learning

[includeIf "gitdir:~/Code/private"]
    path = ~/.gitconfig-private
