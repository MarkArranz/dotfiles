export XDG_CACHE_HOME="${HOME}/.cache"
export XDG_CONFIG_HOME="${HOME}/.config"
export XDG_DATA_HOME="${HOME}/.local/share"

if command -v nvim >/dev/null 2>&1; then
  export EDITOR="nvim"
  export VISUAL="nvim"
  export MANPAGER="nvim +Man!"
elif command -v vim >/dev/null 2>&1; then
  export EDITOR="vim"
  export VISUAL="vim"
else
  export EDITOR="vi"
  export VISUAL="vi"
fi

export ZDOTDIR="${XDG_CONFIG_HOME}/zsh"

export HISTFILE="${XDG_DATA_HOME}/zsh_history"  # History filepath
export HISTSIZE=1000000                   # Maximum events for internal history
export SAVEHIST=1000000                   # Maximum events in history file

{{- if and (eq .chezmoi.os "linux") (not .forDevcontainer) }}

# Make electron apps wayland aware:
export ELECTRON_OZONE_PLATFORM_HINT=wayland

{{- end }}
